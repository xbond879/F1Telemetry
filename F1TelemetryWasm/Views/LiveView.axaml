<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:lvc="using:LiveChartsCore.SkiaSharpView.Avalonia"
             xmlns:viewModels="clr-namespace:F1TelemetryWasm.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="800"
             x:Class="F1TelemetryWasm.Views.LiveView"
             x:DataType="viewModels:LiveViewModel"
             DataContextChanged="StyledElement_OnDataContextChanged" >

    <StackPanel Spacing="5" Name="MainStack">
        <Grid ColumnDefinitions="*,Auto">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Current Lap: " />
                <TextBlock Text="{Binding LapData.CurrentLap}"></TextBlock>
                <TextBlock Text="; Best Lap Time: " />
                <TextBlock Text="{Binding LapData.BestLapTime, StringFormat='mm\\:ss\\.fff'}"></TextBlock>
            </StackPanel>
        </Grid>
    </StackPanel>
</UserControl>